# .env - environment configuration for plex stack
PUID=1000            # user ID for file ownership in containers
PGID=1000            # group ID for file ownership
TZ=Europe/Oslo       # timezone for the containers (adjust as needed)
DOMAIN=minmedia.cloud

# Paths on the host system (adjust these to your preferred locations)
MEDIA_MOUNT=/mnt/gdrive            # Google Drive mount point on host
DOWNLOADS_DIR=/mnt/downloads       # Local downloads directory on host